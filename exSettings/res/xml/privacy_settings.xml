<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/privacy_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.exsettings">
    <PreferenceScreen android:persistent="false" android:title="@string/backup_data_title" android:key="backup_data" android:fragment="com.android.exsettings.backup.ToggleBackupSettingFragment" />
    <PreferenceScreen android:persistent="false" android:title="@string/backup_configure_account_title" android:key="configure_account">
        <intent android:action="dummy" />
    </PreferenceScreen>
    <SwitchPreference android:persistent="false" android:title="@string/auto_restore_title" android:key="auto_restore" android:summary="@string/auto_restore_summary" />
    <Preference android:persistent="false" android:enabled="false" android:title="@string/backup_inactive_title" android:selectable="false" android:key="backup_inactive" />
    <PreferenceScreen android:title="@string/reset_network_title" android:key="network_reset" android:fragment="com.android.exsettings.ResetNetwork" settings:keywords="@string/keywords_network_reset" />
    <PreferenceScreen android:title="@string/master_clear_title" android:key="factory_reset" android:fragment="com.android.exsettings.MasterClear" settings:keywords="@string/keywords_factory_data_reset" />
</PreferenceScreen>