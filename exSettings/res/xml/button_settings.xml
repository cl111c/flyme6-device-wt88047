<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/button_pref_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.exsettings">
    <SwitchPreference android:title="@string/disable_navkeys_title" android:key="disable_nav_keys" android:summary="@string/disable_navkeys_summary" android:defaultValue="false" />
    <com.android.exsettings.cyanogenmod.ButtonBacklightBrightness android:persistent="false" android:title="@string/button_backlight_title" android:key="button_backlight" android:dialogTitle="@string/button_backlight_title" />
    <PreferenceCategory android:title="@string/navigation_bar_category" android:key="navigation_bar_category">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/navigation_bar_left_title" android:key="navigation_bar_left" android:summary="@string/navigation_bar_left_summary" android:defaultValue="false" />
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/navigation_bar_arrow_keys_title" android:key="navigation_bar_menu_arrow_keys" android:summary="@string/navigation_bar_arrow_keys_summary" android:defaultValue="false" />
        <com.android.exsettings.cyanogenmod.SystemSettingSwitchPreference android:title="@string/double_tap_to_sleep_navbar_title" android:key="double_tap_sleep_gesture_navbar" android:summary="@string/double_tap_to_sleep_navbar_summary" android:defaultValue="false" />
        <PreferenceScreen android:title="@string/navigation_bar_title" android:key="navigation_bar" android:fragment="com.android.exsettings.cyanogenmod.NavBar" />
        <ListPreference android:persistent="false" android:title="@string/navigation_bar_recents_title" android:key="navigation_recents_long_press" android:dialogTitle="@string/navigation_bar_recents_title" />
    </PreferenceCategory>
    <SeekBarPreference android:max="100" android:title="@string/navigation_bar_height" android:key="navigation_bar_height" android:defaultValue="100" />
    <PreferenceCategory android:title="@string/hardware_keys_power_key_title" android:key="power_key">
        <PreferenceScreen android:title="@string/power_menu_title" android:key="power_menu" android:fragment="com.android.exsettings.cyanogenmod.PowerMenuActions" />
        <SwitchPreference android:persistent="false" android:title="@string/power_end_call_title" android:key="power_end_call" android:summary="@string/power_end_call_summary" />
        <SwitchPreference android:persistent="false" android:title="@string/camera_double_tap_power_gesture_title" android:key="camera_double_tap_power_gesture" android:summary="@string/camera_double_tap_power_gesture_desc" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/hardware_keys_home_key_title" android:key="home_key">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/button_wake_title" android:key="home_wake_screen" android:defaultValue="true" />
        <SwitchPreference android:persistent="false" android:title="@string/home_answer_call_title" android:key="home_answer_call" android:summary="@string/home_answer_call_summary" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_long_press_title" android:key="hardware_keys_home_long_press" android:dialogTitle="@string/hardware_keys_long_press_title" android:entryValues="@array/hardware_keys_action_values" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_double_tap_title" android:key="hardware_keys_home_double_tap" android:dialogTitle="@string/hardware_keys_double_tap_title" android:entryValues="@array/hardware_keys_action_values" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/hardware_keys_back_key_title" android:key="back_key">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/button_wake_title" android:key="back_wake_screen" android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/hardware_keys_menu_key_title" android:key="menu_key">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/button_wake_title" android:key="menu_wake_screen" android:defaultValue="false" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_short_press_title" android:key="hardware_keys_menu_press" android:dialogTitle="@string/hardware_keys_short_press_title" android:entryValues="@array/hardware_keys_action_values" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_long_press_title" android:key="hardware_keys_menu_long_press" android:dialogTitle="@string/hardware_keys_long_press_title" android:entryValues="@array/hardware_keys_action_values" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/hardware_keys_assist_key_title" android:key="assist_key">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/button_wake_title" android:key="assist_wake_screen" android:defaultValue="false" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_short_press_title" android:key="hardware_keys_assist_press" android:dialogTitle="@string/hardware_keys_short_press_title" android:entryValues="@array/hardware_keys_action_values" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_long_press_title" android:key="hardware_keys_assist_long_press" android:dialogTitle="@string/hardware_keys_long_press_title" android:entryValues="@array/hardware_keys_action_values" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/hardware_keys_appswitch_key_title" android:key="app_switch_key">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/button_wake_title" android:key="app_switch_wake_screen" android:defaultValue="false" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_short_press_title" android:key="hardware_keys_app_switch_press" android:dialogTitle="@string/hardware_keys_short_press_title" android:entryValues="@array/hardware_keys_action_values" />
        <ListPreference android:persistent="false" android:entries="@array/hardware_keys_action_entries" android:title="@string/hardware_keys_long_press_title" android:key="hardware_keys_app_switch_long_press" android:dialogTitle="@string/hardware_keys_long_press_title" android:entryValues="@array/hardware_keys_action_values" />
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/hardware_keys_app_switch_swap_buttons_title" android:key="app_switch_swap_buttons" android:summary="@string/hardware_keys_app_switch_swap_buttons_summary" android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/hardware_keys_camera_key_title" android:key="camera_key">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/button_wake_title" android:key="camera_wake_screen" android:defaultValue="false" />
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/camera_sleep_on_release_title" android:key="camera_sleep_on_release" android:summary="@string/camera_sleep_on_release_summary" android:defaultValue="false" />
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/camera_launch_title" android:key="camera_launch" android:summary="@string/camera_launch_summary" android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/hardware_keys_volume_keys_title" android:key="volume_keys">
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/button_wake_title" android:key="volume_wake_screen" android:defaultValue="false" />
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/volbtn_music_controls_title" android:key="volbtn_music_controls" android:summary="@string/volbtn_music_controls_summary" android:defaultValue="true" />
        <com.android.exsettings.cyanogenmod.CMSystemSettingSwitchPreference android:title="@string/volume_keys_control_ring_stream_title" android:key="volume_keys_control_ring_stream" android:defaultValue="true" android:summaryOn="@string/volume_keys_control_ring_stream_summary_on" android:summaryOff="@string/volume_keys_control_ring_stream_summary_off" />
        <ListPreference android:persistent="false" android:entries="@array/volbtn_cursor_control_entries" android:title="@string/volbtn_cursor_control_title" android:key="volume_key_cursor_control" android:dialogTitle="@string/volbtn_cursor_control_title" android:entryValues="@array/volbtn_cursor_control_values" />
        <SwitchPreference android:title="@string/swap_volume_buttons_title" android:key="swap_volume_buttons" android:summary="@string/swap_volume_buttons_summary" />
    </PreferenceCategory>
</PreferenceScreen>