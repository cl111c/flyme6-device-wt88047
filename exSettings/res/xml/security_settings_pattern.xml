<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/lock_settings_picker_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.exsettings">
    <PreferenceCategory android:title="@string/lock_settings_title" android:key="security_category">
        <PreferenceScreen android:persistent="false" android:title="@string/unlock_set_unlock_launch_picker_title" android:key="unlock_set_or_change" android:summary="@string/unlock_set_unlock_mode_pattern" settings:keywords="@string/keywords_lockscreen" />
        <SwitchPreference android:persistent="false" android:title="@string/lock_directly_show_pattern" android:key="directlyshow" />
        <SwitchPreference android:persistent="false" android:title="@string/lockpattern_settings_enable_visible_pattern_title" android:key="visiblepattern" />
        <SwitchPreference android:persistent="false" android:title="@string/lockpattern_settings_enable_error_path_title" android:key="visible_error_pattern" />
        <SwitchPreference android:persistent="false" android:title="@string/lockpattern_settings_enable_dots_title" android:key="visibledots" />
        <ListPreference android:persistent="false" android:entries="@array/lock_after_timeout_entries" android:title="@string/lock_after_timeout" android:key="lock_after_timeout" android:summary="@string/lock_after_timeout_summary" android:entryValues="@array/lock_after_timeout_values" />
        <com.android.exsettings.cyanogenmod.SystemSettingSwitchPreference android:title="@string/lockscreen_enable_power_menu_title" android:key="lockscreen_enable_power_menu" android:defaultValue="true" />
        <SwitchPreference android:title="@string/lockpattern_settings_enable_power_button_instantly_locks" android:key="power_button_instantly_locks" />
        <Preference android:persistent="false" android:title="@string/manage_trust_agents" android:key="manage_trust_agents" android:summary="@string/manage_trust_agents_summary" android:fragment="com.android.exsettings.TrustAgentSettings" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_general" android:key="general_category">
        <com.android.exsettings.SingleLineSummaryPreference android:title="@string/owner_info_settings_title" android:key="owner_info_settings" android:summary="@string/owner_info_settings_summary" />
        <PreferenceScreen android:title="@string/lockscreen_shortcuts_title" android:key="lockscreen_shortcuts" android:summary="@string/lockscreen_shortcuts_summary" android:fragment="com.android.exsettings.nx.dslv.ActionListViewSettings">
            <extra android:name="actionMode" android:value="4" />
            <extra android:name="maxAllowedActions" android:value="5" />
            <extra android:name="disableLongpress" android:value="true" />
            <extra android:name="useAppPickerOnly" android:value="true" />
            <extra android:name="fragment" android:value="com.android.exsettings.nx.fragments.LockscreenShortcutFragment" />
        </PreferenceScreen>
        <com.android.exsettings.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_visualizer_title" android:key="lockscreen_visualizer" android:defaultValue="true" />
        <com.android.exsettings.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_blur_enabled_title" android:key="lock_screen_blur_enabled" android:defaultValue="true" />
        <com.android.exsettings.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_weather_enabled_title" android:key="lock_screen_weather_enabled" android:defaultValue="false" />
        <PreferenceScreen android:title="@string/lockscreen_wallpaper_title" android:key="lockscreen_wallpaper">
            <intent android:action="android.intent.action.SET_KEYGUARD_WALLPAPER" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>